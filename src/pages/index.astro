---
import Layout from '@/layouts/Layout.astro';
import Features from '@/components/Features';
import CodeDemo from '@/components/CodeDemo';
---

<Layout title="Home">
  <!-- Hero Section -->
  <section class="relative py-32 bg-capicu-beige">
    <div class="container">
      <div class="grid lg:grid-cols-2 gap-10 items-center">
        <div>
          <h1 class="text-5xl lg:text-6xl xl:text-7xl font-bold lg:tracking-tight">
            Making AI fit anywhere.
          </h1>
          <p class="text-lg mt-4 text-capicu-navy-600 max-w-xl">
            Capicú is a Puerto Rico-based company that challenges the current workflow of AI/ML deployment. We're making AI fit where it's needed and traditionally unreachable.
          </p>
          <div class="mt-6 flex flex-col sm:flex-row gap-3">
            <a href="/get-started" class="btn btn-primary">
              Get Started
            </a>
            <a href="/demo" class="btn btn-secondary">
              Live Demo
            </a>
          </div>
        </div>
        <div class="hidden lg:block ml-8">
          <img src="/hero.png" alt="Capicú Logo" class="h-[32rem] w-auto" />
        </div>
      </div>
    </div>
  </section>

  <!-- Code Demo Section -->
  <section class="py-16 bg-capicu-off-white">
    <div class="container">
      <CodeDemo client:load />
    </div>
  </section>

