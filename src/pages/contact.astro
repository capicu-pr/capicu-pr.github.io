---
import Contactform from "@/components/contactform.astro";
import Container from "@/components/container.astro";
import Sectionhead from "@/components/sectionhead.astro";
import Layout from "@/layouts/Layout.astro";
import { Icon } from "astro-icon/components";
---

<Layout title="Contact">
  <Container>
    <Sectionhead>
      <Fragment slot="title">Get in Touch</Fragment>
      <Fragment slot="desc">Let's discuss how Capicú can optimize your AI models for any hardware target.</Fragment>
    </Sectionhead>

    <div class="grid md:grid-cols-2 gap-10 mx-auto max-w-4xl mt-16">
      <div class="space-y-8">
        <div>
          <h2 class="font-semibold text-2xl text-capicu-primary">Contact Capicú</h2>
          <p class="text-lg leading-relaxed text-capicu-navy-600 mt-3">
            Have questions about our compression engine? Want to discuss a specific use case? 
            We're here to help you optimize your AI models for any hardware environment.
          </p>
        </div>

        <div class="space-y-4">
          <div class="flex items-center space-x-3 text-capicu-navy-600">
            <Icon class="text-capicu-accent w-5 h-5" name="uil:map-marker" />
            <span>Mayagüez, PR, 00680</span>
          </div>
          <div class="flex items-center space-x-3 text-capicu-navy-600">
            <Icon class="text-capicu-accent w-5 h-5" name="uil:envelope" />
            <a href="mailto:info@capicu.com" class="hover:text-capicu-primary transition-colors">
              info@capicu.com
            </a>
          </div>
          <div class="flex items-center space-x-3 text-capicu-navy-600">
            <Icon class="text-capicu-accent w-5 h-5" name="uil:phone" />
            <a href="tel:+1 (787) 802 4040" class="hover:text-capicu-primary transition-colors">
              +1 (787) 802 4040
            </a>
          </div>
        </div>

        <div class="pt-6">
          <h3 class="font-semibold text-xl text-capicu-primary mb-4">Connect With Us</h3>
          <div class="flex space-x-4">
            <a href="#" class="text-capicu-navy-600 hover:text-capicu-primary transition-colors">
              <Icon class="w-6 h-6" name="uil:github" />
            </a>
            <a href="#" class="text-capicu-navy-600 hover:text-capicu-primary transition-colors">
              <Icon class="w-6 h-6" name="uil:instagram" />
            </a>
            <a href="#" class="text-capicu-navy-600 hover:text-capicu-primary transition-colors">
              <Icon class="w-6 h-6" name="uil:linkedin" />
            </a>
          </div>
        </div>
      </div>

      <div>
        <Contactform />
      </div>
    </div>
